---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description?: string;
  publishDate: string;
  tags?: string[];
}

// 在 Astro 中，Markdown 文件的 frontmatter 通过 Astro.props.frontmatter 传递
const frontmatter = Astro.props.frontmatter || Astro.props;
const { title, description, publishDate, tags = [] } = frontmatter;

// 更健壮的日期处理
function formatDate(dateString) {
  // 检查输入是否有效
  if (!dateString || typeof dateString !== 'string') {
    return '日期未知';
  }
  
  // 首先尝试手动解析 YYYY-MM-DD 格式，这样更可靠
  const match = dateString.match(/^(\d{4})-(\d{2})-(\d{2})$/);
  if (match) {
    const [, year, month, day] = match;
    return `${year}年${parseInt(month)}月${parseInt(day)}日`;
  }
  
  // 如果不是标准格式，尝试使用 Date 对象
  try {
    const date = new Date(dateString);
    if (!isNaN(date.getTime())) {
      return date.toLocaleDateString('zh-CN', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      });
    }
  } catch (error) {
    // 忽略错误
  }
  
  // 最后回退到原始字符串
  return dateString;
}

const formattedDate = formatDate(publishDate);
---

<BaseLayout title={title} description={description}>
  <article class="prose prose-lg max-w-none">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">{title}</h1>
      <div class="flex items-center text-gray-600 dark:text-gray-400 mb-4">
        <time datetime={publishDate}>{formattedDate}</time>
      </div>
    </header>

    <div class="prose prose-lg max-w-none blog-content [&>p]:leading-7 [&>p]:mb-4 [&>h2]:mt-8 [&>h2]:mb-4 [&>h3]:mt-6 [&>h3]:mb-3">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  /* 紧凑表格样式 */
  .blog-content :global(table) {
    max-width: 90% !important;
    width: auto !important;
    margin: 1.25rem auto !important;
    border-collapse: collapse !important;
    font-size: 0.85rem !important;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1) !important;
    border-radius: 0.375rem !important;
    overflow: hidden !important;
  }

  .blog-content :global(table th),
  .blog-content :global(table td) {
    border: 1px solid #e5e7eb !important;
    padding: 0.5rem 0.625rem !important;
    text-align: left !important;
    vertical-align: top !important;
    line-height: 1.4 !important;
  }

  .blog-content :global(table th) {
    background: linear-gradient(135deg, #0ea5e9, #0284c7) !important;
    font-weight: 600 !important;
    color: #ffffff !important;
    font-size: 0.8rem !important;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1) !important;
  }

  .dark .blog-content :global(table th) {
    background: linear-gradient(135deg, #1e40af, #1d4ed8) !important;
  }

  .blog-content :global(table td) {
    background-color: #f8fafc !important;
    color: #1e293b !important;
  }

  .dark .blog-content :global(table td) {
    background-color: #1f2937 !important;
    color: #e5e7eb !important;
  }

  .blog-content :global(table tbody tr:nth-child(even) td) {
    background-color: #e0f2fe !important;
  }

  .dark .blog-content :global(table tbody tr:nth-child(even) td) {
    background-color: #374151 !important;
  }

  .blog-content :global(table tbody tr:hover td) {
    background-color: #bae6fd !important;
    transition: background-color 0.2s ease !important;
  }

  .dark .blog-content :global(table tbody tr:hover td) {
    background-color: #1e3a8a !important;
    transition: background-color 0.2s ease !important;
  }

  /* 图片样式 - 控制宽度和高度 */
  .blog-content :global(img) {
    max-width: 100% !important;
    height: auto !important;
    max-height: 70vh !important;
    object-fit: contain !important;
    margin: 1rem auto !important;
    display: block !important;
    border-radius: 0.375rem !important;
  }

  /* 针对prose容器内的图片 */
  .prose :global(img) {
    max-width: 100% !important;
    height: auto !important;
    max-height: 70vh !important;
    object-fit: contain !important;
    margin: 1rem auto !important;
    display: block !important;
    border-radius: 0.375rem !important;
  }
</style>
